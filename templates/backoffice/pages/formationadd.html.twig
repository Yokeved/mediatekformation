{% extends "backoffice/baseback.html.twig" %}

{% block body %}
    <div class="row mt-3">
        <div class="col">
            <style>
                .form-grid {
                    display: grid;
                    grid-template-columns: 1fr 2fr;
                    grid-column-gap: 10px;
                }
            </style>

        <h4 class="text-info mt-5">
            <form method="post" action="{{ path('formationsbackoffice.add') }}" class="form-grid">
                <label for="title" style="grid-column: 1;">Titre :</label>
                <input class="form-control form-control-lg" type="text" aria-label=".form-control-lg example" id="title" name="title" value="" required style="grid-column: 2;"><br>
                <label for="description" style="grid-column: 1;">Description :</label>
                <textarea class="form-control form-control-lg" type="text" aria-label=".form-control-lg example" id="description" name="description" style="grid-column: 2;"></textarea><br>
                <label for="videoid" style="grid-column: 1;">ID de la vidéo YouTube :</label>
                <input class="form-control form-control-lg" type="text" aria-label=".form-control-lg example" type="url" id="videoid" name="videoid" value="" required style="grid-column: 2;"><br>
                <label for="playlist" style="grid-column: 1;">Playlist :</label>
                    <select class="form-select form-select-lg form-control" required name="recherche" id="recherche" onchange="this.form.submit()">
                            <option value=""></option>
                            {% for playlist in playlists %}
                                <option 
                                    value="{{ playlist.id }}">{{ playlist.name }}
                                </option>
                            {% endfor %}
                        </select><br>
                <label for="categories" style="grid-column: 1;">Catégories :</label>

                <div class="form-select form-select-lg form-control" style="grid-column: 2;">
                    {% for categorie in categories %}
                        <div>
                            <input class="form-check-input" type="checkbox" id="categorie-{{ categorie.id }}" name="categories[]" value="{{ categorie.id }}">
                            <label class="form-check-label" for="categorie-{{ categorie.id }}">{{ categorie.name }}</label>
                        </div>
                    {% endfor %}
                </div><br>
                <label for="publishedatstring" style="grid-column: 1;">Publié le :</label>
                <input class="form-control form-control-lg" type="date" id="published" name="datetime" value="" max="{{ 'now'|date('Y-m-d') }}" style="grid-column: 2;"><br>
                <div style="text-align: center;">
                <br><br>
                    <input type="submit" value="Enregister" class="btn btn-secondary ">
                </div>
            </form>
        </h4>

        </div>
    </div>
{% endblock %}
